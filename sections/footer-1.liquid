<footer class="footer mt-{{ section.settings.mt}} pt-{{ section.settings.pt}} pb-{{ section.settings.pb}} mt-lg-{{ section.settings.mt_lg}} pt-lg-{{ section.settings.pt_lg}} pb-lg-{{ section.settings.pb_lg}} appear-animate text-{{ section.settings.color }} bg-{{ section.settings.color_bg }}" id="{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="footer-section" >
  <div class="container">
      <div class="footer-middle border-none">
          <div class="row">
              <div class="col-lg-7">
                <div class="row">
                  {% if section.settings.menu_1 %}
                  {% assign _menu = linklists[section.settings.menu_linklist_1] %}
                  <div class="col-md-4">
                      <div class="widget">
                          {% if _menu != blank %}
                          {% if section.settings.menu_title_show_1 == true %}
                          <h4 class="widget-title">{{ _menu.title }}</h4>
                          {% endif %}
                          <ul class="widget-body">
                              {% for link in _menu.links %}
                              <li class="fs-1p7 mb-2 lh-1p6"><a href="{{ link.url }}">{{ link.title }}</a></li>
                              {% endfor %}
                          </ul>
                          {% else %}
                          {% if section.settings.menu_title_show_1 == true %}
                          <h4 class="widget-title">Sample menu</h4>
                          {% endif %}
                          <ul class="widget-body">
                              {% for i in (1..6) %}
                              <li class="fs-1p7 mb-2 lh-1p6"><a href="#">Menu item</a></li>
                              {% endfor %}
                          </ul>
                          {% endif %}
                      </div>
                      <!-- End of Widget -->
                  </div>
                  {% endif %}
                  {% if section.settings.menu_2 %}
                  {% assign _menu = linklists[section.settings.menu_linklist_2] %}
                  <div class="col-md-4">
                      <div class="widget">
                          {% if _menu != blank %}
                          {% if section.settings.menu_title_show_2 == true %}
                          <h4 class="widget-title">{{ _menu.title }}</h4>
                          {% endif %}
                          <ul class="widget-body">
                              {% for link in _menu.links %}
                              <li class="fs-1p7 mb-2 lh-1p6"><a href="{{ link.url }}">{{ link.title }}</a></li>
                              {% endfor %}
                          </ul>
                          {% else %}
                          {% if section.settings.menu_title_show_2 == true %}
                          <h4 class="widget-title">Sample menu</h4>
                          {% endif %}
                          <ul class="widget-body">
                              {% for i in (1..6) %}
                              <li class="fs-1p7 mb-2 lh-1p6"><a href="#">Menu item</a></li>
                              {% endfor %}
                          </ul>
                          {% endif %}
                      </div>
                      <!-- End of Widget -->
                  </div>
                  {% endif %}
                  {% if section.settings.menu_3 %}
                  {% assign _menu = linklists[section.settings.menu_linklist_3] %}
                  <div class="col-md-4">
                      <div class="widget">
                          {% if _menu != blank %}
                          {% if section.settings.menu_title_show_3 == true %}
                          <h4 class="widget-title">{{ _menu.title }}</h4>
                          {% endif %}
                          <ul class="widget-body">
                              {% for link in _menu.links %}
                              <li class="fs-1p7 mb-2 lh-1p6"><a href="{{ link.url }}">{{ link.title }}</a></li>
                              {% endfor %}
                          </ul>
                          {% else %}
                          {% if section.settings.menu_title_show_3 == true %}
                          <h4 class="widget-title">Sample menu</h4>
                          {% endif %}
                          <ul class="widget-body">
                              {% for i in (1..6) %}
                              <li class="fs-1p7 mb-2 lh-1p6"><a href="#">Menu item</a></li>
                              {% endfor %}
                          </ul>
                          {% endif %}
                      </div>
                      <!-- End of Widget -->
                  </div>
                  {% endif %}
                </div>
              </div>
              <div class="col-lg-5">
                  <div class="widget mb-0">
                    {% if section.settings.newsletter %}
                    <h4 class="widget-title text-normal font-weight-slight-bold fs-3 text-{{ section.settings.color }} lh-custom mb-4 p-0" style="--lh:1.3">{{ section.settings.newsletter_heading }}</h4>
                    <div class="widget-body p-0">
                      {% if section.settings.newsletter_desc != blank %}
                      <p class="ls-s pb-2 text-{{ section.settings.color }}">{{ section.settings.newsletter_desc }}</p>
                      {% endif %}
                      <form action="{{ section.settings.newsletter_action | default: '#' }}" class="input-wrapper input-wrapper-inline input-wrapper-round">
                          <input type="email" class="form-control bg-white{% unless section.settings.color_bg == 'white' %} border-none{% endunless %} fs-custom" name="email" id="newsletter-email1"
                              placeholder="{{ 'general.newsletter_form.email_placeholder' | t}}" required style="--fs:1.7rem"/>
                          <button class="btn btn-primary btn-shadow-lg btn-ellipse btn-icon-right ml-2 lh-custom" type="submit" style="--lh:1.45">{{ 'general.newsletter_form.submit' | t }}</button>
                      </form>
                    </div>
                    {% endif %}
                    <!-- End of Newsletter -->
                  </div>
                 
                  {% if section.settings.social_icons %}
                  <div class="social-links mt-lg-8 mt-5">
                      {% assign _socials = 'facebook,twitter,linkedin,pinterest,instagram,tumblr,snapchat,youtube,vimeo' | split: ',' %}
                      {% assign _social_classparts = 'facebook-f,twitter,linkedin,pinterest,instagram,tumblr,snapchat,youtube,vimeo' | split: ',' %}  
                      {% for _social in _socials %}
                      {% assign _setting_name = 'social_' | append: _social | append: '_link' %}
                      {% assign _social_link = settings[_setting_name] %}
                      {% if _social_link != blank %}
                      <a href="{{ _social_link }}" class="social-link social-{{ _social }} fab fa-{{ _social_classparts[forloop.index0] }} border-transparent text-{{ section.settings.color }} fs-custom" style="--fs:1.9rem"></a>
                      {% endif %}
                      {% endfor %}
                  </div>
                  {% endif %}
              </div>
          </div>
          <div class="row pt-5">
            <div class="col-lg-7">
              <div class="h-100 d-flex align-items-center">
                <figure class="payment">
                  {% if section.settings.image_payments != blank %}
                  <img src="{{ section.settings.image_payments | img_url: '351x38', scale: 2 }}" alt="payment" width="351" height="38" />
                  {% else %}
                  {% endif %}
                </figure>
              </div>
            </div>
            <div class="col-lg-5">
              <div class="d-lg-flex align-items-baseline">
                <div class="fs-2p5 font-weight-slight-bold mr-3"><a href="tel:{{ section.settings.contact_phone }}">{{ section.settings.contact_phone }}</a></div>
                <div class="fs-1p6 text-underline"><a href="mailto:{{ section.settings.contact_email }}">{{ section.settings.contact_email }}</a></div>
              </div>
            </div>
          </div>
      </div>
      <!-- End of FooterMiddle -->
      <div class="footer-bottom">
        <p class="copyright">{{ section.settings.copyright }}</p>
      </div>
      <!-- End of FooterBottom -->
  </div>
</footer>

