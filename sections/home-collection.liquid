{{ 'home-collection.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-custom-collection section-{{ section.id }}-padding">
  <div class="page-width">
    <!-- Heading Section -->
    <div class="heading-wrapper">
      <h2 class="section-heading">{{ section.settings.heading }}</h2>
      <h3 class="section-subheading">{{ section.settings.subheading }}</h3>
    </div>

    <!-- Blocks Section -->
    <div class="blocks-wrapper">
      {%- for block in section.blocks -%}
        <div class="collection-block">
          <div class="collection-block-content">
            <div class="image-area">
            <!-- Collection Image -->
            {%- if block.settings.collection_image != blank -%}
                <a href="{{ block.settings.collection.url }}">
                    <img src="{{ block.settings.collection_image | img_url: 'medium' }}" alt="{{ block.settings.block_title }}" class="collection-image">
                </a>
              
            {%- endif -%}
            </div>
            <!-- Collection Title and Subtitle -->
            <h3 class="collection-title">{{ block.settings.block_title }}</h3>
            <h4 class="collection-subtitle"><a href="{{ block.settings.collection.url }}" class="chevron-link">{{ block.settings.block_subtitle }} {{- 'chevron-right.svg' | inline_asset_content -}}</a></h4>

            <!-- Chevron Arrow -->
            {% comment %} <a href="{{ block.settings.collection.url }}" class="chevron-link">
              <span class="chevron-icon">&#8594;</span>
            </a> {% endcomment %}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Home Collection Section",
  "tag": "section",
  "class": "section-custom-collection",
  "max_blocks": 10,
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Spacing from Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Spacing from Bottom",
      "default": 36
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Section Heading",
      "label": "Section Heading"
    },
    {
      "type": "inline_richtext",
      "id": "subheading",
      "default": "Section Subheading",
      "label": "Section Subheading"
    }
  ],
  "blocks": [
    {
      "type": "collection_block",
      "name": "Collection Block",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        },
        {
          "type": "image_picker",
          "id": "collection_image",
          "label": "Upload Collection Image"
        },
        {
          "type": "inline_richtext",
          "id": "block_title",
          "default": "Block Title",
          "label": "Block Title"
        },
        {
          "type": "inline_richtext",
          "id": "block_subtitle",
          "default": "Block Subtitle",
          "label": "Block Subtitle"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Collection",
      "blocks": [
        {
          "type": "collection_block"
        },
        {
          "type": "collection_block"
        }
      ]
    }
  ]
}
{% endschema %}
