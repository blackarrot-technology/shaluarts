<footer class="footer mt-{{ section.settings.mt}} pt-{{ section.settings.pt}} pb-{{ section.settings.pb}} mt-lg-{{ section.settings.mt_lg}} pt-lg-{{ section.settings.pt_lg}} pb-lg-{{ section.settings.pb_lg}} appear-animate text-{{ section.settings.color }} bg-{{ section.settings.color_bg }}" id="{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="footer-section">
    <div class="container">
        <div class="footer-middle{% if section.settings.menus_border_top %} border-top{% endif %}{% if section.settings.menus_border_bottom %} border-bottom{% endif %}{% if section.settings.color_bg == 'dark' or section.settings.color_bg == 'black' %} border-dark{% endif %}">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        {% for block in section.blocks %}
						<div class="col-lg-4 col-md-6">
							<div class="widget ml-lg-4">
								{% assign _menu = linklists[block.settings.menu_linklist] %}
								{% if _menu != blank %}
								{% assign _limit = _menu.links.size | divided_by: 2 %}
								{% assign _mod = _menu.links.size | modulo: 2 %}
								{% if _mod > 0 %}{% assign _limit = _limit | plus: 1 %}{% endif %}
								<h4 class="widget-title border-none text-normal text-grey fs-1p4 font-weight-normal">{{ block.settings.custom_heading | default: _menu.title }}</h4>
								<div class="row">
									<div class="col-6">
										<ul class="widget-body">
											{% for link in _menu.links limit: _limit %}
											<li class="fs-1p7 mb-2"><a href="{{ link.url }}">{{ link.title }}</a></li>
											{% endfor %}
										</ul>
									</div>
									<div class="col-6">
										<ul class="widget-body">
											{% for link in _menu.links offset: _limit %}
											<li class="fs-1p7 mb-2"><a href="{{ link.url }}">{{ link.title }}</a></li>
											{% endfor %}
										</ul>
									</div>
								</div>
								{% else %}
								<h4 class="widget-title border-none text-normal text-grey fs-1p4 font-weight-normal">Sample menu</h4>
								<div class="row">
									<div class="col-6">
										<ul class="widget-body">
											{% for i in (1..6) %}
											<li class="fs-1p7 mb-2"><a href="#">Menu item</a></li>
											{% endfor %}
										</ul>
									</div>
									<div class="col-6">
										<ul class="widget-body">
											{% for i in (1..6) %}
											<li class="fs-1p7 mb-2"><a href="#">Menu item</a></li>
											{% endfor %}
										</ul>
									</div>
								</div>
								{% endif %}
							</div>
							<!-- End of Widget -->
						</div>
						{% endfor %}
                    </div>
                </div>
            </div>
            
        </div>
        <div class="footer-bottom">
			<div class="footer-left">
				<div class="d-flex align-items-baseline">
					<div class="fs-2p5 font-weight-slight-bold mr-3">
						<a href="tel:{{ section.settings.contact_phone }}">{{ section.settings.contact_phone }}</a>
					</div>
					<div class="fs-1p6 text-underline">
						<a href="mailto:{{ section.settings.contact_email }}">{{ section.settings.contact_email }}</a>
					</div>
				</div>
			</div>
			<div class="footer-right d-none d-lg-flex">
				<div class="dropdown">
					<a href="#currency">{{ cart.currency.iso_code | upcase }}</a>
					<ul class="dropdown-box">
						{%- for currency in shop.enabled_currencies -%}
						<li>
							<a href="{{ shop.url }}?currency={{ currency.iso_code }}">{{ currency.iso_code | upcase }}</a>
						</li>
						{%- endfor -%}
					</ul>
				</div>
				{%- if shop.published_locales.size > 1 -%}
				{%- form 'localization' -%}
				<div class="dropdown">
					<a href="#language"><img src="{{ form.current_locale.iso_code | append: '.png' | asset_url }}" alt="USA Flag" class="dropdown-image"/>{{ form.current_locale.endonym_name }}</a>
					<ul class="dropdown-box">
						{%- for locale in form.available_locales -%}
						<li>
							<a href="{{ locale.root_url }}">
							<img src="{{ locale.iso_code | append: '.png' | asset_url }}" alt="{{ locale.iso_code }} Flag" class="dropdown-image"/>{{ locale.endonym_name }}
							</a>
						</li>
						{%- endfor -%}
					</ul>
				</div>
				{%- endform -%}
				{%- endif -%}
			</div>
        </div>
		<div class="d-flex align-items-center">
			<p class="copyright mr-5 fs-1p4">{{ section.settings.copyright }}</p>
			{% if section.settings.social_icons %}
			<div class="social-links">
				{% assign _socials = 'facebook,twitter,linkedin,pinterest,instagram,tumblr,snapchat,youtube,vimeo' | split: ',' %}
				{% assign _social_classparts = 'facebook-f,twitter,linkedin,pinterest,instagram,tumblr,snapchat,youtube,vimeo' | split: ',' %}
				{% for _social in _socials %}
					{% assign _setting_name = 'social_' | append: _social | append: '_link' %}
					{% assign _social_link = settings[_setting_name] %}
					{% if _social_link != blank %}
						<a href="{{ _social_link }}" class="social-link social-{{ _social }} fab fa-{{ _social_classparts[forloop.index0] }} border-transparent"></a>
					{% endif %}
				{% endfor %}
			</div>
			{% endif %}
		</div>
		<div class="d-flex pt-5 pb-5">
			<figure class="payment">
				{% if section.settings.image_payments != blank %}
					<img src="{{ section.settings.image_payments | img_url: '351x38', scale: 2 }}" alt="payment" width="351" height="38"/>
				{% else %}
					
				{% endif %}
			</figure>
		</div>
        <!-- End of FooterBottom -->
    </div>
</footer>

