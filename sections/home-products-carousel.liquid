<section class="product-wrapper container{% unless section.settings.has_container %}-fluid{% endunless %} appear-animate mt-{{ section.settings.mt}} mb-{{ section.settings.mb}} pt-{{ section.settings.pt}} pb-{{ section.settings.pb}} mt-lg-{{ section.settings.mt_lg}} mb-lg-{{ section.settings.mb_lg}} pt-lg-{{ section.settings.pt_lg}} pb-lg-{{ section.settings.pb_lg}}" id="{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="products-list-section" data-animation-options="{
    'delay': '.3s'
}">
    <h2 class="title title-simple text-normal font-weight-slight-bold">{{ section.settings.title }}</h2>
    {% assign _collection = collections[section.settings.collection] %}
    
    <div id="slider-{{ section.id }}" class="owl-carousel owl-theme row cols-2 cols-md-3 cols-lg-4" data-owl-options="{
        'items': {{ section.settings.items_per_row }},
        'nav': false,
        'loop': false,
        'dots': true,
        'margin': 30,
        'responsive': {
            '0': {
                'items': 2
            },
            '768': {
                'items': 3
            },
            '992': {
                'items': 4,
                'dots': false,
                'nav': true
            },
            '1200': {
                'items': {{ section.settings.items_per_row }},
                'dots': false,
                'nav': true
            }
        }
    }">
    {% if _collection != blank %}
        {% for _product in _collection.products limit:section.settings.items_limit %}
        {% render 'product-item', product:_product, sign: section.id %}
        {% endfor %}
    {% else %}
        {% for i in (1..6) %}
        {% render 'product-item-dummy' %}
        {% endfor %}
    {% endif %}
    </div>
    {% if section.settings.has_separate == true %}<hr class="mb-0">{% endif %}
</section>

