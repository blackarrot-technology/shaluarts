<div class="container{%-if section.settings.product_fullwidth-%}-fluid{%-endif-%}">
    {%- include "breadcrumb" -%}
    <section class="contact-section">
        <div class="row pb-6">
            <div class="col-md-{% if section.settings.image != blank %}6{% else %}12{% endif %}">
                <div class="contact-information ">
                    {%  if section.settings.info_heading != blank %}
                    <h2 class="font-weight-slight-bold fs-4">{{section.settings.info_heading}}</h2>
                    {% endif %}
                    {%  if section.settings.info_subheading != blank %}
                    <p class="fs-2p2">{{section.settings.info_subheading}}</p>
                    {% endif %}
                    {%  if section.settings.info_address != blank %}
                    <p>{{section.settings.info_address}}</p>
                    {% endif %}

                    <div class="phone-email mb-4">
                        {%  if section.settings.info_phone != blank %}
                        <a href="tel:{{section.settings.info_phone}}" class="contact-phone font-weight-slight-bold fs-2p5 pr-4">{{section.settings.info_phone}}</a>
                        {% endif %}
                        {%  if section.settings.info_support_email != blank %}
                        <a href="mailto:{{section.settings.info_support_email}}" class="contact-email">{{section.settings.info_support_email}}</a><br>
                        {% endif %}
                    </div>
                    {% if section.settings.social_links %}
                    {% include "social-links" %}
                    {% endif %}
                </div>
            </div>
            {% if section.settings.image != blank %}
            <div class="col-md-6 image">
                <img src="{{ section.settings.image | img_url: "master" }}" />
            </div>
            {% endif %}
        </div>
        <div class="page-contact-form mb-8 pt-8 border-top">{% include "contact-form" %}</div>
    </section>
</div>

<!-- Google Maps - Go to the bottom of the page to change settings and map location. -->
<div class="grey-section google-map" id="googlemaps">
    {{ section.settings.map }}
</div>
<!-- End Map Section -->

{% schema %}
{
  "name": "Contact Page - Type 1",
    "settings": [
    {
      "type": "header",
      "content": "Contact Information"
    },
    {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
    },
    {
        "type": "text",
        "id": "info_heading",
        "label": "Heading"
    },
    {
        "type": "html",
        "id": "info_subheading",
        "label": "Description"
    },
    {
        "type": "text",
        "id": "info_address",
        "label": "Address"
    },
    {
        "type": "text",
        "id": "info_phone",
        "label": "Phone"
    },
    {
        "type": "text",
        "id": "info_support_email",
        "label": "Support Email"
    },
    {
        "type": "checkbox",
        "id": "social_links",
        "label": "Social Links"
    },
    {
        "type": "header",
        "content": "Google Map"
    },
    {
        "type": "html",
        "id": "map",
        "label": "Google Map Iframe"
    }
  ]
}
{% endschema %}