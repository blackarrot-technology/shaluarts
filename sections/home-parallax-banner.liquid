<section class="rt-banner parallax mt-{{ section.settings.mt}} mb-{{ section.settings.mb}} pt-{{ section.settings.pt}} pb-{{ section.settings.pb}} mt-lg-{{ section.settings.mt_lg}} mb-lg-{{ section.settings.mb_lg}} pt-lg-{{ section.settings.pt_lg}} pb-lg-{{ section.settings.pb_lg}}"{% if section.settings.video != blank %} data-video-src="{{ section.settings.video }}"{% endif %}{% if section.settings.image %} data-image-src="{{ section.settings.image | img_url: 'master' }}"{% endif %} data-option="{'offset': 0}" id="{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="parallax-banner-section"
  style="background-color:{{ section.settings.color_bg }}">
  <div class="{% if section.settings.has_container %}container{% endif %} banner-content appear-animate text-{{ section.settings.content_hori_align }} pt-10 pb-10"
    data-animation-options="{
                    'name': 'blurIn',
                    'delay': '.3s'
                }">
    <h2 class="banner-title font-weight-slight-bold text-{{ section.settings.color_text }} fs-custom fs-mobile-4 ls-m mb-4 lh-custom" style="--fs:{{ section.settings.fs_title | append: 'rem' }};--lh:1.1">{{ section.settings.title }}
    </h2>
    {% if section.settings.description != blank %}
    <p class="font-primary text-{{ section.settings.color_text }} fs-custom mb-4 font-weight-normal lh-custom" style="--fs:{{ section.settings.fs_description | append: 'rem' }};--lh:1.8">{{ section.settings.description }}</p>
    {% endif %}
    {% if section.settings.button_text != blank %}
    <a class="btn btn-primary btn-shadow-lg btn-ellipse text-normal" href="{{ section.settings.button_url | default: 'javascript:void(0);' }}">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
</section>

{% schema %}
{
    "name": "Parallax Banner",
    "class": "index-section index-section--parallax-banner",
    "settings": [
        {
            "type": "header",
            "content": "General"
