                {
                    "value": "white",
                    "label": "White",
                    "group": "Basic"
                },
                {
                    "value": "black",
                    "label": "Black",
                    "group": "Basic"
                },
                {
                    "value": "primary",
                    "label": "Primary",
                    "group": "From settings"
                },
                {
                    "value": "dark",
                    "label": "Dark",
                    "group": "From settings"
                }
            ],
            "default": "white"
        },
        {
            "type": "header",
            "content": "Spacing (large screen)"
        },
        {
            "type": "range",
            "id": "mt_lg",
            "label": "Margin top",
            "unit": "x",
            "min": 0,
            "max": 20,
            "step": 1,
