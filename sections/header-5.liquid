<header class="header p-relative header-type{{ settings.header_type }}" id="{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="header-section" data-header-section>
    {% if section.settings.announcement_used %}
        <div class="bg-white text-center header-announcement">
            <div class="alert border-none font-primary font-weight-semi-bold justify-content-center text-dark pl-10 pr-8 pt-0 pb-0">
                <p class="mb-0 pt-1 pb-1 lh-custom fs-custom" style="--fs:1.4rem;--lh:2rem">{{ section.settings.announcement_text }}
                    {% if section.settings.top_button_text != blank %}
                        <a href="{{ section.settings.top_button_url | default: 'javascript:void(0);' }}" class="btn btn-link btn-underline btn-no-height-add text-normal font-weight-slight-bold text-dark ml-1 lh-custom fs-custom">{{ section.settings.top_button_text }}</a>
                    {% endif %}
                </p>
                <button class="btn btn-link btn-close" type="button">
                    <i class="close-icon"></i>
                </button>
            </div>
        </div>
    {% endif %}
    <div class="bg-black text-white header-top">
        <div class="container-fluid">
            <div class="header-left">
                {% if section.settings.social_icons %}
                    <div class="social-links d-none d-lg-block">
                        {% assign _socials = 'facebook,twitter,linkedin,pinterest,instagram,tumblr,snapchat,youtube,vimeo' | split: ',' %}
                        {% assign _social_displaytexts = 'Facebook,Twitter,LinkedIn,Pinterest,Instagram,Tumblr,SnapChat,YouTube,Vimeo' | split: ',' %}
                        {% for _social in _socials %}
                            {% assign _setting_name = 'social_' | append: _social | append: '_link' %}
                            {% assign _social_link = settings[_setting_name] %}
                            {% if _social_link != blank %}
                                <a href="{{ _social_link }}" class="pr-4 text-normal fs-1p3">{{ _social_displaytexts[forloop.index0] }}</a>
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
            <div class="header-right text-normal">
                <div class="d-flex align-items-baseline">
                    <div class="fs-1p3 font-weight-normal pr-4">
                        <a href="tel:{{ section.settings.contact_phone }}">{{ section.settings.contact_phone | default: 'YOUR PHONE NUMBER'}}</a>
                    </div>
                    <div class="fs-1p3 font-weight-normal">
                        <a href="mailto:{{ section.settings.contact_email }}">{{ section.settings.contact_email | default: 'YOUR EMAIL'}}</a>
                    </div>
                </div>
                <span class="divider mr-0"></span>
                {% if section.settings.top_currency %}
                    <div class="dropdown">
                        <a href="#currency">{{ cart.currency.iso_code | upcase }}</a>
                        <ul class="dropdown-box">
                            {%- for currency in shop.enabled_currencies -%}
                                <li>
                                    <a href="{{ shop.url }}?currency={{ currency.iso_code }}">{{ currency.iso_code | upcase }}</a>
                                </li>
                            {%- endfor -%}
                        </ul>
                    </div>
                    <!-- End of DropDown Menu -->
                {% endif %}
                {% if section.settings.top_language %}
                    {%- if shop.published_locales.size > 1 -%}
                        {%- form 'localization' -%}
                            <div class="dropdown">
                                <a href="#language"><img src="{{ form.current_locale.iso_code | append: '.png' | asset_url }}" alt="USA Flag" class="dropdown-image"/>{{ form.current_locale.endonym_name }}</a>
                                <ul class="dropdown-box">
                                    {%- for locale in form.available_locales -%}
                                        <li>
                                            <a href="{{ locale.root_url }}">
                                                <img src="{{ locale.iso_code | append: '.png' | asset_url }}" alt="{{ locale.iso_code }} Flag" class="dropdown-image"/>{{ locale.endonym_name }}
                                            </a>
                                        </li>
                                    {%- endfor -%}
                                </ul>
                            </div>
                        {%- endform -%}
                    {%- endif -%}
                {% endif %}
            </div>
        </div>
    </div>
    <div class="header-middle sticky-header fix-top sticky-content font-weight-normal">
        <div class="container-fluid justify-content-between">
            <div class="header-left">
                <a href="{{ shop.url }}" class="logo mr-lg-10">
                    {% if section.settings.header_logo != blank %}
                        <img src="{{ section.settings.header_logo | img_url: '163x39', scale: 2 }}" alt="logo" width="163" height="39"/>
                    {% else %}
                        YOUR LOGO
                    {% endif %}
                </a>
                <!-- End of Logo -->
                {% if section.settings.main_menu %}
                    {% if linklists[section.settings.main_menu_linklist] != blank %}
                        {% include 'site-nav', is_mainmenu: true, linklist: section.settings.main_menu_linklist, wrapper_class: 'ml-lg-10' %}
                    {% else %}
                        {% include 'site-nav-dummie', wrapper_class: 'ml-lg-10' %}
                    {% endif %}
                {% endif %}
            </div>
            <div class="header-right flex-1 justify-content-end">
                <div class="header-search hs-simple">
                    <form action="/search" class="input-wrapper drawer drawer--top" data-predictive-search-start>
                        <input type="text" name="q" placeholder="{{ 'general.search.placeholder' | t }}" role="combobox" aria-autocomplete="list" aria-owns="predictive-search-results" aria-expanded="false" aria-label="{{ 'general.search.placeholder' | t }}" aria-haspopup="listbox" class="search-form__input search-bar__input form-control bg-light border-none" data-predictive-search-drawer-input/>
                        <input aria-hidden="true" name="options[prefix]" type="hidden" value="last"/>
                        <div class="predictive-search-wrapper predictive-search-wrapper--drawer" data-predictive-search-mount="drawer"></div>
                        <button class="btn btn-sm btn-search" data-search-form-submit type="submit">
                            <i class="icon-search-3"></i>
                        </button>
                    </form>
                </div>
                {% if section.settings.top_currency %}
                    <div class="dropdown">
                        <a href="#currency">{{ cart.currency.iso_code | upcase }}</a>
                        <ul class="dropdown-box">
                            {%- for currency in shop.enabled_currencies -%}
                                <li>
                                    <a href="{{ shop.url }}?currency={{ currency.iso_code }}">{{ currency.iso_code | upcase }}</a>
                                </li>
                            {%- endfor -%}
                        </ul>
                    </div>
                    <!-- End of DropDown Menu -->
                {% endif %}
                {% if section.settings.top_language %}
                    {%- if shop.published_locales.size > 1 -%}
                        {%- form 'localization' -%}
                            <div class="dropdown">
                                <a href="#language"><img src="{{ form.current_locale.iso_code | append: '.png' | asset_url }}" alt="USA Flag" class="dropdown-image"/>{{ form.current_locale.endonym_name }}</a>
                                <ul class="dropdown-box">
                                    {%- for locale in form.available_locales -%}
                                        <li>
                                            <a href="{{ locale.root_url }}">
                                                <img src="{{ locale.iso_code | append: '.png' | asset_url }}" alt="{{ locale.iso_code }} Flag" class="dropdown-image"/>{{ locale.endonym_name }}
                                            </a>
                                        </li>
                                    {%- endfor -%}
                                </ul>
                            </div>
                        {%- endform -%}
                    {%- endif -%}
                    <!-- End of DropDown Menu -->
                {% endif %}
                {% if shop.customer_accounts_enabled %}
                    {% if customer %}
                        <a class="login logged label-down link" href="{{ routes.account_url }}" data-toggle="login-modal">
                            {% include 'icon-account' %}
                        </a>
                    {% else %}
                        <a class="login label-down link" href="{{ routes.account_login_url }}" data-toggle="login-modal">
                            {% include 'icon-account' %}
                        </a>
                    {% endif %}
                {% endif %}
                <!-- End of Login -->
                {% if settings.enable_wishlist %}
                    <a class="wishlist label-down link" href="{{ pages[settings.wishlist_page].url }}">
                        {% include 'icon-wishlist' %}
                    </a>
                {% endif %}
                <div class="mobile-search" data-mobile-menu-toggle>
                    <a class="search-toggle" href="#">
                        {% include 'icon-search' %}
                    </a>
                </div>
                <!-- End of Header Search -->
                {% include "header-cart", _has_label: false %}
            </div>
        </div>
    </div>
</header>


