  "name": "Product pages",
  "class": "product-quickview-container",
  "settings": [
      {
          "type": "checkbox",
          "id": "show_navigation",
          "label": "Show navigation",
          "default": false
      },
      {
          "type": "checkbox",
          "id": "show_sku",
          "label": "Show sku",
          "default": true
      },
      {
          "type": "checkbox",
          "id": "show_vendor",
          "label": "Show vendor",
          "default": true
      },
      {
          "type": "checkbox",
          "id": "show_stock",
          "label": "Show stock",
          "default": true
      },
      {
          "type": "checkbox",
