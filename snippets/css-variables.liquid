{% comment %}
  This is used to create CSS custom variables with Liquid references
  The file variables.scss is referring these CSS custom variables as Sass variables
  to use throughout the stylesheet
{% endcomment %}
{% style %}
  {%- if settings.enforce_googlefont_heading == false -%}
  {%- assign first_font = settings.type_first_font -%}
  {%- endif -%}
  {%- if settings.enforce_googlefont_body == false -%}
  {%- assign second_font = settings.type_second_font -%}
  {%- endif -%}
  {%- assign third_font = settings.type_third_font -%}

  {%- if settings.enforce_googlefont_body == false -%}
  {%- assign second_font_bolder = second_font | font_modify: 'weight', 'bolder' -%}
  {%- assign second_font_bold = second_font | font_modify: 'weight', 'bold' -%}
  {%- assign second_font_italic = second_font | font_modify: 'style', 'italic' -%}
  {%- assign second_font_bold_italic = second_font_bold | font_modify: 'style', 'italic' -%}
  {%- endif -%}

  :root {
    --color-primary: {{ settings.color_primary }};
    --color-primary-rgb: {{ settings.color_primary | color_to_rgb | remove: 'rgb(' | remove: 'rgba(' | remove: ')' | remove: ', 0.0' }};
    --color-primary-dark: {{ settings.color_primary_dark }};
    --color-secondary: {{ settings.color_secondary }};
    --color-body: {{ settings.color_body }};
    --color-alert: {{ settings.color_alert }};
    --color-success: {{ settings.color_success }};
    --color-dark: {{ settings.color_dark }};
    --color-light: {{ settings.color_light }};
    --color-grey: {{ settings.color_grey }};
    --color-grey-rgb: {{ settings.color_grey | color_to_rgb | remove: 'rgb(' | remove: 'rgba(' | remove: ')' | remove: ', 0.0' }};
    --color-border: {{ settings.color_border }};
    --color-border-light: {{ settings.color_border_light }};
    --color-border-dark: {{ settings.color_border_dark }};
    --color-facebook: {{ settings.color_facebook }};
    --color-twitter: {{ settings.color_twitter }};
    --color-linkedin: {{ settings.color_linkedin }};
    --color-email: {{ settings.color_email }};
    --color-google: {{ settings.color_google }};
    --color-pinterest: {{ settings.color_pinterest }};
    --color-reddit: {{ settings.color_reddit }};
    --color-tumblr: {{ settings.color_tumblr }};
    --color-vk: {{ settings.color_vk }};
    --color-whatsapp: {{ settings.color_whatsapp }};
    --color-xing: {{ settings.color_xing }};
    --color-instagram: {{ settings.color_instagram }};
    --color-paypal: {{ settings.color_paypal }};

    --color-primary-lb7: {{ settings.color_primary | color_lighten: 7 }};
    --color-primary-lb20: {{ settings.color_primary | color_lighten: 20 }};
    --color-primary-lb50: {{ settings.color_primary | color_lighten: 50 }};
    --color-primary-db7: {{ settings.color_primary | color_darken: 7 }};
    --color-grey-lb30: {{ settings.color_grey | color_lighten: 30 }};

    --color-secondary-lb7: {{ settings.color_secondary | color_lighten: 7 }};
    --color-secondary-lb10: {{ settings.color_secondary | color_lighten: 10 }};
    --color-secondary-db7: {{ settings.color_secondary | color_darken: 7 }};

    --color-alert-lb7: {{ settings.color_alert | color_lighten: 7 }};
    --color-success-lb7: {{ settings.color_success | color_lighten: 7 }};
    --color-dark-lb7: {{ settings.color_dark | color_lighten: 7 }};

    {%- if settings.enforce_googlefont_heading == false -%}
    --font-stack-first: {{ first_font.family }}, {{ first_font.fallback_families }};
    {%- else -%}
    --font-stack-first: '{{settings.enforce_googlefont_heading_name}}', sans-serif;
    {%- endif -%}
    {%- if settings.enforce_googlefont_body == false -%}
    --font-stack-second: {{ second_font.family }}, {{ second_font.fallback_families }};
    {%- else -%}
    --font-stack-second: '{{settings.enforce_googlefont_body_name}}', sans-serif;
    {%- endif -%}
    --font-stack-third: {{ third_font.family }}, {{ third_font.fallback_families }};
    --soldout-img: url({{ 'sold_out.png' | asset_url }});
    --ps-defaultskin-img: url({{ 'ps-default-skin.png' | asset_url }});
    --ps-defaultskin-svg: url({{ 'ps-default-skin.svg' | asset_url }});
    --ps-preloader: url({{ 'ps-preloader.gif' | asset_url }});

    --border-radius: 55px;

    {% comment %}Add css variables above this line please !!!!!!{% endcomment %}
  }

  @font-face{font-family:LineAwesome;src:url({{ "line-awesome.eot?v=1.1." | asset_url }});src:url({{ "line-awesome.eot??v=1.1.#iefix" | asset_url }}) format("embedded-opentype"),url({{ "line-awesome.woff2?v=1.1." | asset_url }}) format("woff2"),url({{ "line-awesome.woff?v=1.1." | asset_url }}) format("woff"),url({{ "line-awesome.ttf?v=1.1." | asset_url }}) format("truetype"),url({{ "line-awesome.svg?v=1.1.#fa" | asset_url }}) format("svg");font-weight:400;font-style:normal}
