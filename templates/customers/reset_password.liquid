
<main class="main account-page">
  {%- include "page-header" -%}
  <!-- End PageHeader -->
  <div class="page-content mt-10 mb-10">
    <div class="container pt-1">
      <div class="login-popup">
        <div id="RecoverPasswordForm">
          <h3 id="RecoverHeading" class="title title-simple text-left">{{ 'customer.recover_password.title' | t }}</h3>
          <p class="text-left">{{ 'customer.reset_password.subtext' | t: email: email }}</p>
          {% form 'reset_customer_password' %}

          {%- if form.errors -%}
          <div class="form-message form-message--error">
            {{ form.errors | default_errors }}
          </div>
          {%- endif -%}

          <div class="form-group">
            <label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
            <input type="password" value="" name="customer[password]" id="ResetPassword" class="form-control {% if form.errors contains 'password' %} input--error{% endif %}">
          </div>

          <div class="form-group">
            <label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
            <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="form-control {% if form.errors contains 'password_confirmation' %} input--error{% endif %}">
          </div>
          <div class="form-group">
            <input type="submit" class="btn btn-primary btn-block" value="{{ 'customer.reset_password.submit' | t }}">
          </div>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</main>
